{
  "$schema": "https://opencode.ai/config.json",
  "share": "disabled",
  "provider": {
    "openai": {
      "options": {
        "apiKey": "{file:~/openaikey}"
      }
    },
    "anthropic": {
      "options": {
        "apiKey": "{file:~/anthropickey}"
      }
    },
    "openrouter": {
      "options": {
        "apiKey": "{file:~/openrouterkey}"
      },
      "models": {
        "z-ai/glm-4.7": {
          "reasoning": true,
          "options": {
            "provider": {
              "quantizations": ["fp8"],
              "only": ["siliconflow", "google-vertex", "together", "novita", "atlas-cloud"],
              "sort": "latency",
              "preferred_max_latency": 5,
              "preferred_min_throughput": {
                "p90": 50
              }
            }
          }
        },
        "moonshotai/kimi-k2.5": {
          "reasoning": true,
          "options": {
            "provider": {
              "sort": "latency",
              "only": [
                "deepinfra",
                "fireworks",
                "novita",
                "moonshot"
              ],
              "preferred_max_latency": 5,
              "preferred_min_throughput": {
                "p90": 50
              },
            }
          }
        },
        "deepseek/deepseek-v3.1-terminus:exacto": {
          "reasoning": true,
          "options": {
            "provider": {
              "only": ["novita", "atlas-cloud"],
              "sort": "latency",
              "preferred_max_latency": 5,
              "preferred_min_throughput": {
                "p90": 50
              }
            }
          }
        },
        "deepseek/deepseek-v3.2-exp": {
          "reasoning": true,
          "options": {
            "provider": {
              "only": ["deepseek", "novita", "atlas-cloud"],
              "sort": "latency"
            }
          }
        }
      }
    },
  },
  "agent": {
    "pr-reviewer": {
      "mode": "subagent",
      "description": "Reviews pull requests and code changes with focus on quality, security, and best practices",
      // "model": "openrouter/anthropic/claude-haiku-4.5",
      "prompt": "{file:~/.config/opencode/prompts/pr-reviewer.txt}",
      "tools": {
        "bash": true,
        "write": false,
        "edit": false
      }
    },
    "seo-expert": {
      "description": "Reviews and improves project SEO, with emphasis on static site generators like Hugo and Jekyll",
      "mode": "subagent",
      "model": "openrouter/x-ai/grok-4-fast",
      "prompt": "{file:~/.config/opencode/prompts/seo-expert.txt}",
      "tools": {
        "todowrite": true,
        "todoread": true,
        "bash": false,
        "write": false,
        "edit": false
      }
    },
    "seo-analyzer": {
      "description": "Fetches and analyzes SEO for given URLs, generating detailed reports",
      "mode": "subagent",
      "model": "openrouter/x-ai/grok-4-fast",
      "prompt": "{file:~/.config/opencode/prompts/seo-analyzer.txt}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": true
      }
    },
  },
}

