{
  "$schema": "https://opencode.ai/config.json",
  "share": "disabled",
  "provider": {
    "openai": {
      "options": {
        "apiKey": "{file:~/openaikey}"
      }
    },
    "anthropic": {
      "options": {
        "apiKey": "{file:~/anthropickey}"
      }
    },
    "openrouter": {
      "options": {
        "apiKey": "{file:~/openrouterkey}"
      },
      "models": {
        "GPT 5.1 CODEX MINI LOW": {
          "id": "openai/gpt-5.1-codex-mini",
          "reasoning": true,
          "options": {
            "reasoning": {
              "effort": "low",
              "summary": "concise"
            }
          }
        },
        "GPT 5.1 CODEX MINI MEDIUM": {
          "id": "openai/gpt-5.1-codex-mini",
          "reasoning": true,
          "options": {
            "reasoning": {
              "effort": "medium",
              "summary": "concise"
            }
          }
        },
        "GPT 5.1 CODEX MINI HIGH": {
          "id": "openai/gpt-5.1-codex-mini",
          "reasoning": true,
          "options": {
            "reasoning": {
              "effort": "high",
              "summary": "concise"
            }
          }
        },
        "GPT 5.1 CODEX LOW": {
          "id": "openai/gpt-5.1-codex",
          "reasoning": true,
          "options": {
            "reasoning": {
              "effort": "low",
              "summary": "concise"
            }
          }
        },
        "GPT 5.1 CODEX MEDIUM": {
          "id": "openai/gpt-5.1-codex",
          "reasoning": true,
          "options": {
            "reasoning": {
              "effort": "medium",
              "summary": "concise"
            }
          },
        },
        "GPT 5.1 CODEX HIGH": {
          "id": "openai/gpt-5.1-codex",
          "reasoning": true,
          "options": {
            "reasoning": {
              "effort": "high",
              "summary": "concise"
            }
          }
        },
        "deepseek/deepseek-v3.1-terminus:exacto": {
          "reasoning": true,
          "options": {
            "quantization": ["int8"],
            "preferredMinThroughput": {
              "p90": 30
            },
            "provider": {
              "only": ["novita", "atlas-cloud"],
              "sort": "latency"
            }
          }
        },
        "deepseek/deepseek-v3.2-exp": {
          "reasoning": true,
          "options": {
            "preferredMinThroughput": {
              "p90": 30
            },
            "provider": {
              "only": ["deepseek", "novita", "atlas-cloud"],
              "sort": "latency"
            }
          }
        },
        "anthropic/claude-haiku-4.5": {
          "options": {}
        },
      }
    },
  },
  "agent": {
    "pr-reviewer": {
      "mode": "subagent",
      "description": "Reviews pull requests and code changes with focus on quality, security, and best practices",
      // "model": "openrouter/anthropic/claude-haiku-4.5",
      "prompt": "{file:~/.config/opencode/prompts/pr-reviewer.txt}",
      "tools": {
        "bash": true,
        "write": false,
        "edit": false
      }
    },
    "seo-expert": {
      "description": "Reviews and improves project SEO, with emphasis on static site generators like Hugo and Jekyll",
      "mode": "subagent",
      "model": "openrouter/x-ai/grok-4-fast",
      "prompt": "{file:~/.config/opencode/prompts/seo-expert.txt}",
      "tools": {
        "todowrite": true,
        "todoread": true,
        "bash": false,
        "write": false,
        "edit": false
      }
    },
    "seo-analyzer": {
      "description": "Fetches and analyzes SEO for given URLs, generating detailed reports",
      "mode": "subagent",
      "model": "openrouter/x-ai/grok-4-fast",
      "prompt": "{file:~/.config/opencode/prompts/seo-analyzer.txt}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": true
      }
    },
  },
}

